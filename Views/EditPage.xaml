<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SystemKolekcjonerstwa.Views.EditPage"
             Title="Edycja Kolekcji">
   
        <StackLayout>
            <Entry x:Name="editName" Placeholder="Name" />
            <Entry x:Name="editDescription" Placeholder="Description" />
            <Entry x:Name="editCount" Placeholder="Count" />

        <Button Text="Save" Clicked="Button_Save">
            <Button.Triggers>
                <Trigger TargetType="Button" Property="IsPressed" Value="True">
                    <Setter Property="BackgroundColor" Value="LightGray" />
                </Trigger>
            </Button.Triggers>
        </Button>
    </StackLayout>

    
</ContentPage>